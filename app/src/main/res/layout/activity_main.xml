<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_id"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/tv_open_live"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/tv_watch_live"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_index_solid_button"
            android:gravity="center"
            android:text="开启直播"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/tv_watch_live"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:gravity="center"
            android:hint="房间ID"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_watch_live"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/tv_back"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_index_button"
            android:gravity="center"
            android:text="观看直播"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/tv_call"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_index_button"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="技术支持：021-65650071"
            android:textColor="@color/white" />
    </RelativeLayout>