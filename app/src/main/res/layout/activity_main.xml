<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/tv_call">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo" />



                <TextView
                    android:id="@+id/tv_open_live"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    android:background="@drawable/shape_index_solid_button"
                    android:gravity="center"
                    android:text="开启直播"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/tv_watch_live"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_above="@+id/tv_back"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    android:background="@drawable/shape_index_button"
                    android:gravity="center"
                    android:text="扫码观看"
                    android:textColor="@color/white" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


        </LinearLayout>





        <TextView
            android:id="@+id/tv_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="技术支持：021-65650071"
            android:textColor="@color/white" />
    </RelativeLayout>